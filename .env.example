# Slack Configuration (Required)
# Get these from https://api.slack.com/apps (after creating a Slack app)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here

# Claude Code CLI Configuration
# Path to Claude Code CLI binary (auto-detected if in PATH)
CLAUDE_CODE_PATH=claude
CLAUDE_TIMEOUT=5m

# Claude Code Tool Configuration
# Comma-separated list of allowed tools for Claude Code
ALLOWED_TOOLS=Read,Write,Bash,Grep,Glob,WebSearch
# Comma-separated list of disallowed tools (overrides allowed)
DISALLOWED_TOOLS=

# Bot Configuration
BOT_NAME=claude-bot
BOT_DISPLAY_NAME=Claude Bot
COMMAND_PREFIX=!claude

# User Access Control (comma-separated)
ALLOWED_USERS=user1@company.com,user2@company.com
ADMIN_USERS=admin@company.com
ALLOWED_CHANNELS=general,dev-team

# Session Management
SESSION_TIMEOUT=2h
MAX_SESSIONS_PER_USER=3
SESSION_CLEANUP_INTERVAL=15m

# Security & Rate Limiting
ENABLE_AUTH=true
RATE_LIMIT_PER_MINUTE=20
MAX_MESSAGE_LENGTH=4000

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
HEALTH_CHECK_PATH=/health

# Working Directory & Commands
WORKING_DIRECTORY=/tmp/claude-workspace
COMMAND_TIMEOUT=5m
MAX_OUTPUT_LENGTH=10000
ALLOWED_COMMANDS=
BLOCKED_COMMANDS=rm,sudo,passwd

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_DEBUG=false