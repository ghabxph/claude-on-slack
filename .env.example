# Slack Configuration
# Get these from https://api.slack.com/apps (after creating a Slack app)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-here

# Claude Code Integration
# Get your API key from https://console.anthropic.com/
CLAUDE_API_KEY=sk-your-anthropic-api-key-here

# Claude Code binary path (auto-detected if in PATH)
CLAUDE_CODE_PATH=claude

# User Access Control
# Comma-separated list of allowed user emails
ALLOWED_USERS=user1@example.com,user2@example.com,admin@company.com

# Channel Restrictions (optional)
# Comma-separated list of allowed channel IDs (empty = all channels)
ALLOWED_CHANNELS=

# Security Settings
MAX_DAILY_COST_USD=10.00
MAX_TOKENS_PER_REQUEST=50000
COMMAND_TIMEOUT_SECONDS=300

# Claude Code Tool Permissions
# Comma-separated list of allowed tools
ALLOWED_TOOLS=Read,Write,Bash,WebSearch,Glob,Grep

# Dangerous tools that require explicit permission
RESTRICTED_TOOLS=Bash,Write

# Session Management  
WORKING_DIR_BASE=/tmp/slack-claude-sessions
SESSION_TIMEOUT_HOURS=24

# Logging and Monitoring
LOG_LEVEL=INFO
LOG_FORMAT=json

# Service Configuration
LISTEN_PORT=8080
HEALTH_CHECK_PORT=8081

# Optional: External integrations
# PROMETHEUS_METRICS_PORT=9090
# WEBHOOK_URL_FOR_ALERTS=https://hooks.slack.com/services/...